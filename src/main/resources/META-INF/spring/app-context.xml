<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<description>IPFilter service application context configuration</description>

	<context:component-scan base-package="com.silvertree.ipfilter" />

	<bean id="ipFilterJDBCDAO" scope="singleton" class="com.silvertree.ipfilter.dao.IpFilterJDBCDAO">
        <property name="dataSource" ref="dataSource"/>
    </bean>

	<bean id="ipFilterRedisDAO" scope="singleton" class="com.silvertree.ipfilter.dao.IpFilterRedisDAO"/>
	
	<bean id="redisService" scope="singleton" class="com.silvertree.ipfilter.IIpFilterServiceImpl">
		<property name="ipFilterDao" ref="ipFilterRedisDAO"/>
	</bean>

	<bean id="jdbcService" scope="singleton" class="com.silvertree.ipfilter.IIpFilterServiceImpl">
		<property name="ipFilterDao" ref="ipFilterJDBCDAO"/>
	</bean>	
    
    <bean id="dataSource"  class="org.apache.derby.jdbc.ClientDataSource">
        <property name="databaseName" value="MyDbTest"/>
        <property name="serverName" value="localhost"/>
        <property name="portNumber" value="1527"/>
    </bean>

	<bean id="jedisConnFactory"
		class="org.springframework.data.redis.connection.jedis.JedisConnectionFactory"
		p:use-pool="true"
		p:hostName="localhost"
		p:port="6379" />

	<bean id="redisTemplate" class="org.springframework.data.redis.core.RedisTemplate"
		p:connection-factory-ref="jedisConnFactory" />
    
      
</beans>
